<%= form_with(model: @vehicle, local: true) do |f|%>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
        <% @vehicle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <h1> Enter vehicle Details </h1>
    <div class="field">
      <%= f.label :color %><br>
      <%= f.text_field :color, :class => "color" , :required => 'required' %>
      <p class="error" > </p>
    </div>
    <div class="field">
      <%= f.label :registeration_number %><br>
      <%= f.text_field :registeration_number ,:class => "registeration_number", :required => 'required' %>
      <p class="error" > </p>
    </div>
    <div class="field">
      <%= f.label :type %><br>
      <%= f.select :type, [['Two Wheeler', 'TwoWheeler'], ['Four Wheeler', 'FourWheeler']] %>
      <p class="error" > </p>
    </div>
    <div class="field">
      <%= f.label :entry_gate %><br>
      <%= f.select :entry_gate, ["1","2","3","4"] %>  
      <p class="error" > </p>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
